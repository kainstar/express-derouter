{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "extends": "standard",
  "rules": {
    "indent": ["error", 2],
    "arrow-parens": 0,
    "generator-star-spacing": 0,
    "no-var": "error"
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  }
}
